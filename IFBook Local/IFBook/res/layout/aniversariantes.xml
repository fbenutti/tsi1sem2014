<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgblank" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:orientation="horizontal" >
                
                <ImageView
                    android:id="@+id/estrela"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/perfil"
                    android:gravity="center_vertical|right"
                    android:src="@android:drawable/btn_star_big_off" />
            
            <ImageView
                android:id="@+id/exibePerfil2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/perfil"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/foto_perfil" />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtidUsuario"
                    style="@style/TextoAniversariantesSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="Id"
                    android:textColor="@color/bggray"
                    android:textSize="12px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtNome"
                    style="@style/TextoAniversariantesSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:background="#9bafce"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="Nome"
                    android:textColor="@color/bgblank" />

                <TextView
                    android:id="@+id/txtNascimento"
                    style="@style/TextoAniversariantesSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="#ffe694"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="Nascimento" />
            </LinearLayout>
        </TableRow>
        
        
              
        
        
    </LinearLayout>

</RelativeLayout>