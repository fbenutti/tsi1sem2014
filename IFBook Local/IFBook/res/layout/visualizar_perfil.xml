<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgblank"
    android:orientation="vertical"
    tools:context=".ExibePerfil" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="95dp"
        android:orientation="vertical"
        android:scrollbars="none" >

        <TableRow
            android:id="@+id/linha01"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@color/bggreen" >

            <ImageView
                android:id="@+id/Home"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:gravity="center_vertical|left"
                android:onClick="ExibeHome"
                android:scaleType="fitStart"
                android:src="@drawable/logoifbook" />

            <ImageView
                android:id="@+id/exibePerfil2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/perfil"
                android:gravity="center_vertical|right"
                android:onClick="meuPerfil"
                android:scaleType="fitEnd"
                android:src="@drawable/foto_perfil" />
        </TableRow>

        <LinearLayout
            android:id="@+id/linha03"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/bgblued" >

            <TextView
                style="@style/TitulosBotoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/meuperfil" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linha04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgblank"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imagePerfil"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/foto_perfil" />

            <Button
                android:id="@+id/buttonEditPerfil"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/bgblank"
                android:drawableTop="@drawable/edit"
                android:ems="10"
                android:text="@string/editar"
                android:textColor="@color/bggray" />
        </LinearLayout>

        <TextView
            android:id="@+id/perfilNome"
            style="@style/TextoPerfilLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Nome" />

        <TextView
            android:id="@+id/perfilApelido"
            style="@style/TextoPerfilMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apelido" />

        <TextView
            android:id="@+id/perfilCidade"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cidade" />

        <TextView
            android:id="@+id/perfilNasc"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de Nascimento" />

        <TextView
            android:id="@+id/perfilEstadoC"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado Civil" />

        <TextView
            android:id="@+id/perfilEmail"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/perfilTelefone"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone" />

        <TextView
            android:id="@+id/perfilTrabalho"
            style="@style/TextoPerfilSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local de Trabalho" />
    </LinearLayout>

</LinearLayout>
