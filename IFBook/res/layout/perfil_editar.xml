<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
        <TextView
        android:id="@+id/textIdClassificado"
        android:layout_width="320dp"
        android:layout_height="29dp"
        android:layout_x="2dp"
        android:layout_y="84dp"
        android:background="#104E8B"
        android:text="Editar Perfil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F2F8FA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />
    
     <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_x="1dp"
        android:layout_y="1dp"
        android:background="#a8cf45"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
    <ImageView
        android:id="@+id/Home"
        android:layout_width="111dp"
        android:layout_height="35dp"
        android:layout_x="5dp"
        android:layout_y="14dp"
        android:clickable="true"
        android:onClick="ExibeHome"
        android:src="@drawable/logotipovazado" />
    <ImageView
        android:id="@+id/exibePerfil"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_x="256dp"
        android:layout_y="2dp"
        android:clickable="true"
        android:onClick="meuPerfil"
        android:src="@drawable/foto_perfil" />
 
 
   <TextView
        android:id="@+id/botaoMenssagens"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="55dp"
          android:background="#4876FF"
        android:clickable="true"
        android:text="       Menssagens"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:onClick="exibeMensagens"/>
          

    <TextView
        android:id="@+id/botaoClassificados"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_x="161dp"
        android:layout_y="55dp"
        android:background="#FFA500"
        android:clickable="true"
        android:text="      Classificados"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:onClick="exibeClassificados"/>

    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_x="19dp"
        android:layout_y="127dp"
        android:src="@drawable/foto_perfil" />

           <EditText
               android:id="@+id/editApelido"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_x="1dp"
               android:layout_y="296dp"
               android:ems="10"
               android:inputType="textPersonName" >

               <requestFocus />
           </EditText>

            <Spinner
                android:id="@+id/spinnerEstadoC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_x="1dp"
                android:layout_y="369dp" />

            <TextView
                android:id="@+id/botaoMenssagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="7dp"
                android:layout_y="349dp"
                android:text="Relacionamento"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/botaoClassificados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="6dp"
                android:layout_y="456dp"
                android:text="Telefone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_x="1dp"
                    android:layout_y="476dp"
                    android:ems="10"
                    android:inputType="phone" />

                 <EditText
                     android:id="@+id/editEmail"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_x="2dp"
                     android:layout_y="545dp"
                     android:ems="10"
                     android:inputType="textEmailAddress" />

                 <TextView
                     android:id="@+id/textIdClassificadoEditar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_x="8dp"
                     android:layout_y="526dp"
                     android:text="E-mail"
                     android:textAppearance="?android:attr/textAppearanceSmall" />

                 <Button
                     android:id="@+id/buttonImgArquivo"
                     android:layout_width="wrap_content"
                     android:layout_height="39dp"
                     android:layout_x="258dp"
                     android:layout_y="140dp"
                     android:drawableTop="@drawable/file" />

                 <Button
                     android:id="@+id/buttonImgCamera"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_x="258dp"
                     android:layout_y="194dp"
                     android:drawableTop="@drawable/camera" />

                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_x="8dp"
                     android:layout_y="278dp"
                     android:text="Apelido" />

                 <Button
                     android:id="@+id/buttonSalvar"
                     android:layout_width="match_parent"
                     android:layout_height="67dp"
                     android:layout_x="4dp"
                     android:layout_y="678dp"
                     android:drawableTop="@drawable/save" />

                 <EditText
                     android:id="@+id/editTrabalho"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_x="0dp"
                     android:layout_y="610dp"
                     android:ems="10" />

                 <TextView
                     android:id="@+id/textView3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_x="4dp"
                     android:layout_y="592dp"
                     android:text="Local de Trabalho" />

</AbsoluteLayout>
</ScrollView>

