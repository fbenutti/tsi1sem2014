<?xml version="1.0" encoding="utf-8"?>   
    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="br.edu.ifsp.ddm.ifbook.ExibePerfil" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_x="1dp"
        android:layout_y="1dp"
        android:background="#a8cf45"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/Home"
        android:layout_width="111dp"
        android:layout_height="35dp"
        android:layout_x="5dp"
        android:layout_y="14dp"
        android:clickable="true"
        android:onClick="ExibeHome"
        android:src="@drawable/logotipovazado" />
    <ImageView
        android:id="@+id/exibePerfil"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_x="256dp"
        android:layout_y="2dp"
        android:clickable="true"
        android:onClick="meuPerfil"
        android:src="@drawable/foto_perfil" />

    <TextView
        android:id="@+id/perfilEstadoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="353dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/perfilTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="405dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/perfilEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="381dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/perfilTrabalho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="429dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/perfilNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="270dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/perfilApelido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="302dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/perfilNasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="332dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
           <TextView
        android:id="@+id/botaoMenssagens"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="55dp"
          android:background="#4876FF"
        android:clickable="true"
        android:text="       Mensagens"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:onClick="exibeMensagens"/>
          

    <TextView
        android:id="@+id/botaoClassificados"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_x="161dp"
        android:layout_y="55dp"
        android:background="#FFA500"
        android:clickable="true"
        android:text="      Classificados"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" 
        android:onClick="exibeClassificados"/>

    <TextView
        android:id="@+id/textIdClassificado"
        android:layout_width="320dp"
        android:layout_height="29dp"
        android:layout_x="2dp"
        android:layout_y="84dp"
        android:background="#104E8B"
        android:text="Meu Perfil"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F2F8FA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_x="7dp"
        android:layout_y="123dp"
        android:maxHeight="@android:dimen/thumbnail_width"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:src="@drawable/foto_perfil" />

    <Button
        android:id="@+id/buttonEditPerfil"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_x="232dp"
        android:layout_y="175dp"
        android:drawableTop="@drawable/edit" />

</AbsoluteLayout>