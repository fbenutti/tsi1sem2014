<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgorangel" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/fotoUsuarioMensagem"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_gravity="top"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/perfil"
                        android:scaleType="fitCenter"
                        android:src="@drawable/foto_perfil" />

                    <TextView
                        android:id="@+id/textViewUsuario"
                        style="@style/TextoAniversariantesSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Usuário"
                        android:textSize="12px" />

                    <TextView
                        android:id="@+id/textViewIdMensagens"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="Id"
                        android:textSize="12px"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:minWidth="230dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textViewTitulo"
                        style="@style/TextoPerfilSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9bafce"
                        android:gravity="center_vertical|left"
                        android:minHeight="25dp"
                        android:paddingLeft="10dp"
                        android:text="Titulo"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textViewAreaInteresse"
                            style="@style/TextoMCSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_weight="4"
                            android:background="#ffe694"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"
                            android:text="Área de Interesse"
                            android:textSize="12px" />

                        <TextView
                            android:id="@+id/textViewData"
                            style="@style/TextoMCSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_weight="1"
                            android:background="#ffe694"
                            android:gravity="center_vertical|right"
                            android:paddingRight="10dp"
                            android:text="Data"
                            android:textSize="12px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewDescricao"
                        style="@style/TextoMCSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:maxWidth="230dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:text="Descrição"
                        android:textSize="14px" />

                    <ImageView
                        android:id="@+id/imgMenssagem"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/image" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>